@import '../../mixinspack/mixins.styl'

.main_header
    flexer(sb,c,rn)
    margin-top 3.5vh
    sizer(92vw, 6.8vh)
.menu_title
    user-select: none
    color: #FFF;
    font-family: Overpass;
    font-size: 3.6vh;
    font-style: normal;
    font-weight: 300;
    line-height: 118%;
    letter-spacing: 0.68px;
.menu_title_subtitle
    user-select: none
    color: #FFF;

    font-family: Open Sans;
    font-size: 1.6vh;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 0.3px;
    opacity: 0.4000000059604645;
.profile_con
    flexer(c,c,rn)
.price_con
    transition: .2s
    sizer(15.1vw, 6.1vh)
    flexer(sb,c,rn)
    border-radius: 1.2vh;
.price_con:hover
    border-radius: 1.12vh;
    background: #474747;
.price_con:hover > .price_block_main
    margin-left 2vh
.line
    sizer(0.05vw, 5vh)
    opacity: 0.10000000149011612;
    background: #FFF;
.price_con:hover .line
    opacity 0
.price_block_main
    transition 0.2s
    margin-left 4vw
    flexer(c,s,cn)
.price_con:hover > .paid_btn
    opacity 1
    sizer(5.1vw, 2.7vh)
.paid_btn
    user-select: none
    margin-right: 2vh
    transition: .2s
    opacity 0
    overflow: hidden
    cursor: pointer
    flexer(c,c,rw)
    sizer(0vw, 2.7vh)
    border-radius: 0.6vh;
    border: 0.12vh solid #FFF;
    color: #FFF;
    font-family: Overpass;
    font-size: 1.2vh;
    font-style: normal;
    font-weight: 400;
    line-height: 118%;
    letter-spacing: 0.24px;
.paid_btn:hover
    background: #FFFFFF
    color #2C2C2C
.paid_btn:hover ~ .price_block_main
    margin-left 2vh

.price
    color: #FFF;
    font-family: Overpass;
    font-size: 1.6vh;
    font-style: normal;
    font-weight: 400;
    line-height: 118%;
    letter-spacing: 0.3px;
.paid
    color: rgba(255, 255, 255, 0.40);
    /* Aditional text */
    font-family: Open Sans;
    font-size: 1.1vh;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 0.22px;
.profile
    transition: .2s
    border-radius: 1.2vh;
    flexer(c,c,rn)
    margin-left 0.8vh
.profile:hover
    background: #474747;
.bell_con
    cursor: pointer
    margin-left 0.9vw
    transition 0.2s
    flexer(c,c,rw)
    border-radius: 1vh;
    sizer(3.3vh,3.3vh)
.bell
    transition 0.2s
    sizer(3vh,3vh)
    background-size 100%
    background-image: url(../../../../public/img/notification.svg)
    background-repeat: no-repeat;
    background-position: center 
.bell_con:hover
    background: #fff
.bell_con:hover > .bell
    background-image: url(../../../../public/img/notification_b.svg)
.profile_name_con
    margin-left 0.9vw
    flexer(c,e,cn)
.profile_name
    flexer(c,c,rn)
    gap 0.8vh
.tag
    position relative
    flexer(c,c,rw)
    sizer(3.5vw, 1.9vh)
    border-radius: 0.5vh;
    background: #58aeff5b;
    span
        position: absolute
        top 0.55vh
        color: #58AFFF;
        text-align: center;
        font-family: Overpass;
        font-size: 1.1vh;
        font-style: normal;
        font-weight: 400;
        line-height: 118%;
        letter-spacing: 0.22px;
        text-transform: uppercase;
.p_name
    color: #FFF;
    text-align: right;
    /* H4 */
    font-family: Overpass;
    font-size: 1.6vh;
    font-style: normal;
    font-weight: 300;
    line-height: 118%;
    letter-spacing: 0.3px;
.email
    color: #FFF;
    text-align: right;
    /* Aditional text */
    font-family: Open Sans;
    font-size: 1.1vh;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 0.22px;
    opacity: 0.4000000059604645;
.main_avatar
    margin-left 0.7vw
    sizer(5.5vh, 5.5vh)