@import '../../mixinspack/mixins.styl'


.nav_bar
    user-select: none
    flexer(s,c,cn)
    sizer(4.3vw, 100vh)
    background: rgba(107, 107, 107, 0.30);
.nav_logo
    margin-top 2.7vh
    sizer(2vw, 3.6vh)
.navigation_menu
    margin-top 7.7vh
    flexer(c,c,cn)
    gap 2.2vh
    width: 100%
.menu_item_g
    cursor pointer
    transition: .3s
    border-left .3vh solid #5d62ff00
    flexer(c,c,rw)
    sizer(100%, 4.5vh)
.menu_item_g:hover
    background: linear-gradient(90deg, rgba(93, 99, 255, 0.10) 0%, rgba(93, 99, 255, 0.00) 100%)

    border-left .3vh solid #5D63FF
.grid_link
    transition: .3s
    sizer(2.5vh, 2.5vh)
    background-size:  100%
    background-repeat: no-repeat
    background-position: center 
    background-image: url(../../../../public/img/grid.svg)
.menu_item_g:hover > .grid_link
    background-image: url(../../../../public/img/grid_p.svg)
    background-repeat: no-repeat
    background-position: center 
.menu_item_g.active 
  background: linear-gradient(90deg, rgba(93, 99, 255, 0.10) 0%, rgba(93, 99, 255, 0.00) 100%);
  border-left: 0.3vh solid #5D63FF;
  .grid_link
        background-image: url(../../../../public/img/grid_p.svg)
        background-repeat: no-repeat
        background-position: center 


