    line-height: 118%
    letter-spacing: 0.04vh

.input_container
    transition: .4s
    sizer(40.7vh,16vh)

.input_login
    sizer(36vh,4.5vh)
    margin-top: 5.3vh
    border-radius: 0.7vh
    border: 0.13vh solid rgba(255, 255, 255, 0.30);
    background-color: transparent

.input_login::placeholder
    position: absolute
    left: 1.6vh
    color: rgba(255,255,255,0.30)
    font-family: 'Overpass',sans-serif
    font-size: 2vh
