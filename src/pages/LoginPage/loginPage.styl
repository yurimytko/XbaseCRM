.enter_form_right
    transition: .2s
    sizer(12vh,4.5vh)
    margin-top: 4vh
    background-color: transparent
    border: 1px solid white
    border-radius: 1vh
    color: white
    text-align: center
    font-family: 'Overpass',sans-serif
    font-size: 2vh
    font-style: normal
    font-weight: 400
    line-height: 118%
    letter-spacing: 0.04vh

.enter_form_right:hover
    transition: .2s
    sizer(12vh,4.5vh)
    margin-top: 6vh
    background-color: white
    border: 1px solid white
    border-radius: 1vh
    color: black
    text-align: center
    font-family: 'Overpass',sans-serif
    font-size: 2vh
    font-style: normal
    font-weight: 400
    line-height: 118%
    letter-spacing: 0.04vh


.swaper_block
    position absolute
    z-index: 2
    overflow: hidden 
    right: -11vw
    flexer(c,c,rn)
    sizer(49vw,100vh)
    background: #2C2C2C
    transform: skewx(-24deg)
    transition: .4s


.pattern_box
    transition: .4s
    transform: skewx(24deg)
    flexer(s,s,rn)
    position: relative
.background_img
    position: relative
    opacity: 6%
.sneg_filter
    background: #FFF
    sizer(26.125rem,26.125rem)
    border-radius: 26.125rem
    position: relative 
    filter: blur(95px);

#pattern_box1
    top 43vh
    left 5vh
